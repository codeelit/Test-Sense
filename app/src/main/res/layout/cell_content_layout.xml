<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_of_conetent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/head_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:cropToPadding="false"
                android:scaleType="matrix"
                android:src="@color/colorPrimary"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgTitleRight"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="9dp"
            android:paddingRight="20dp"
            android:paddingBottom="6dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/content_from_address_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fibra_one_bold"
                        android:text="About course"
                        android:textColor="@color/night_300"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Chapter_Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/content_from_address_1"
                        android:layout_alignStart="@+id/content_from_address_1"
                        android:fontFamily="@font/fibra_one_bold"
                        android:text="A Very Basic Tests for Beginners"
                        android:textColor="@color/Screen5S"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="6dp"
                android:src="@color/contentDividerLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/content_delivery_date_badge"
                        style="@style/ContentMainBadgeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/fibra_one_bold"
                        android:text="Difficulty"
                        android:textColor="@color/night_300"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/course_difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/content_delivery_date_badge"
                        android:layout_alignStart="@+id/content_delivery_date_badge"
                        android:fontFamily="@font/fibra_one_bold"
                        android:text="Beginner"
                        android:textColor="@color/Screen5S"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/content_deadline_badge"
                        style="@style/ContentMainBadgeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/fibra_one_bold"
                        android:text="Time"
                        android:textColor="@color/night_300"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/course_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/content_deadline_badge"
                        android:layout_alignStart="@+id/content_deadline_badge"
                        android:fontFamily="@font/fibra_one_bold"
                        android:text="20Min"
                        android:textColor="@color/Screen5S"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/content_deadline_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/course_pre"
                        android:layout_alignStart="@+id/course_pre"
                        android:text=""
                        android:textColor="@color/mainTextColor"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/content_request_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borders"
                android:fontFamily="@font/fibra_one_bold"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="Take Test"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/Screen5S"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:alpha="0.8"
        app:srcCompat="@drawable/shadow_down" />
</androidx.cardview.widget.CardView>
